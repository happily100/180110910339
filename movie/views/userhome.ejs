<body>
  <form action="/userhome" method="get" style="font-size:20px">
  <div class="container">
    <header class="blog-header py-3">
      <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
          <a class="text-muted">电影首页</a>
        </div>
        <div class="col-4 text-center">
          <a class="blog-header-logo text-dark"></a>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
          <input type="submit" name="submit" value="查询" class="btn btn-sm btn-outline-secondary"><input type="text"
            name="aname" value="">
            <input type="submit" name="submit" value="登录" class="btn btn-sm btn-outline-secondary">
        </div>
      </div>
    </header>

    <div class="nav-scroller py-1 mb-2">
      <nav class="nav d-flex justify-content-between">
        <input type="submit" name="submit" value="热播电影" class="text-muted">
        <input type="submit" name="submit" value="全部电影" class="text-muted">
        <input type="submit" name="submit" value="即将上映" class="text-muted">
      </nav>
    </div>

      <%for(i in message){%>
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <strong class="d-inline-block mb-2 text-success"><%= message[i].atype %></strong>
            <h3 class="mb-0">
              <a class="text-dark" href="#"><%= message[i].aname %></a>
            </h3>
            <div class="mb-1 text-muted"><%= message[i].atime %></div>
            <p class="card-text mb-auto">导演：<%= message[i].adirector %><br>演员：<%= message[i].aactor %></p>
            <input type="submit" name="submit" value="详情" class="btn btn-outline-dark">
          </div>
          <img src="<%= message[i].apicture %>"  class="rounded" width="200" height="250"> 
        </div>
      <%}%>
    
